@model ICollection<Auction.Storage.Entity.Lot>
<link rel="stylesheet" href="~/css/all_lots.css" />
<div id="header-strip"></div>
<div class="content">
    @if (Model.Count == 0)
    {
<h1>Вы пока ничего не купили</h1>}

@foreach (Auction.Storage.Entity.Lot lot in Model)
{
<a href="/PLot/@lot.Id">
    <div class="lot">
        <div class="price">
            <div class="center">
                <p>@lot.CurrentPrice </p>
                <img src="../media/ruble.svg" alt="рубль" />
            </div>
        </div>
        @if (lot.PathPhoto == null)
        {
<img src="../media/car.jpg" alt="" class="photo" /> }
else
{
<img src="../@lot.PathPhoto" alt="" class="photo" />}
        <h3>@lot.Name</h3>
    </div>
</a>}
    </div>
